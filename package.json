{
  "name": "clippy-react",
  "version": "0.1.0",
  "description": "Microsoft's Clippy React component",
  "main": "lib/clippy.js",
  "types": "./lib/clippy.d.ts",
  "module": "es/clippy.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
